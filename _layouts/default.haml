!!! Strict

%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title= "#{page.title} | Tink! it's all about IT"
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %meta{ :name => "author", :content => "Tink!" }
    %meta{ :name => "description", :content => "Tink! it's all about IT" }
    %meta{ :name => "keywords", :content => "tink software development agile" }
    - %w(reset text 960 style).each do |css_file|
      = css_tag("#{css_file}.css")
  %body
    #header
      .container_20
        .grid_4
          %a(href='/')
            %img(src='/images/tink-logo.jpg')
    .clear
    #body
      .container_20
        = content
    .clear
    #footer

    %script{ :type => "text/javascript", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" }

    - if variable(:javascript_imports)
      - variable(:javascript_imports).split(' ').each do |js|
        %script{ :src => "js/#{js}.js", :type => 'text/javascript'}   

    - if variable(:javascript)
      %script{:type => 'text/javascript'}
        = variable(:javascript)

